<div id="content">
    <div id="posts">
        : for $posts -> $post {
        <article>
            <p><: $post.content :></p>
        </article>
        : }
    </div>
</div>

<div id="sidebar">
    <div id="stickies">
        : for $stickies -> $sticky {
        <article>
            <p><: $sticky.content :></p>
        </article>
        : }
    </div>
</div>
